<tr class="divide-x divide-gray-200">
  <div id="<%= dom_id widget %>">

    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm font-medium text-gray-900 sm:pl-0"><%= link_to widget.name, edit_widget_path(widget), class: 'underline text-indigo-600' %></td>
    <td class="whitespace-nowrap p-4 text-sm text-gray-500"><input class="w-full" id="widget_<%= widget.id %>_snippet" type="text" readonly name="" value="<%= snippet_code(widget) %>"></td>
    <td class="whitespace-nowrap p-4 text-sm text-center text-gray-500">
      <%= link_to 'Copy', '#', onclick:"copySnippet(#{widget.id})", class: "rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-400 text-white block text-xs" %>
      <small id="widget_<%= widget.id %>_copy_confirmation"></small>
    </td>
    <td class="whitespace-nowrap py-4 pl-4 pr-4 text-sm text-gray-500 sm:pr-0">      
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
